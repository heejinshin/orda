{
  "swagger": "2.0",
  "info": {
    "title": "Ortoo gRPC gateway APIs",
    "version": "v1"
  },
  "tags": [
    {
      "name": "OrtooService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/v1/collections/{collection}": {
      "put": {
        "operationId": "OrtooService_CreateCollection",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/ortooCollectionMessage"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "OrtooService"
        ]
      }
    },
    "/api/v1/collections/{collection}/clients/{cuid}": {
      "post": {
        "operationId": "OrtooService_ProcessClient",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/ortooClientMessage"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "cuid",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ortooClientMessage"
            }
          }
        ],
        "tags": [
          "OrtooService"
        ]
      }
    },
    "/api/v1/collections/{collection}/datatypes/{key}": {
      "get": {
        "operationId": "OrtooService_SnapshotDatatype",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/ortooSnapshotResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "key",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "duid",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "sseq",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "uint64"
          }
        ],
        "tags": [
          "OrtooService"
        ]
      }
    },
    "/api/v1/collections/{collection}/pushpulls/{cuid}": {
      "post": {
        "operationId": "OrtooService_ProcessPushPull",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/ortooPushPullMessage"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "cuid",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ortooPushPullMessage"
            }
          }
        ],
        "tags": [
          "OrtooService"
        ]
      }
    },
    "/api/v1/collections/{collection}/reset": {
      "put": {
        "operationId": "OrtooService_ResetCollection",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/ortooCollectionMessage"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "OrtooService"
        ]
      }
    }
  },
  "definitions": {
    "ortooCheckPoint": {
      "type": "object",
      "properties": {
        "sseq": {
          "type": "string",
          "format": "uint64",
          "title": "@inject_tag: bson:\"s\",json:\"s\""
        },
        "cseq": {
          "type": "string",
          "format": "uint64",
          "title": "@inject_tag: bson:\"c\",json:\"c\""
        }
      }
    },
    "ortooClientMessage": {
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/definitions/ortooHeader"
        },
        "collection": {
          "type": "string"
        },
        "cuid": {
          "type": "string"
        },
        "clientAlias": {
          "type": "string"
        },
        "clientType": {
          "$ref": "#/definitions/ortooClientType"
        },
        "syncType": {
          "$ref": "#/definitions/ortooSyncType"
        }
      }
    },
    "ortooClientType": {
      "type": "string",
      "enum": [
        "PERSISTENT",
        "EPHEMERAL"
      ],
      "default": "PERSISTENT"
    },
    "ortooCollectionMessage": {
      "type": "object",
      "properties": {
        "collection": {
          "type": "string"
        }
      }
    },
    "ortooDatatypeMeta": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "DUID": {
          "type": "string"
        },
        "opID": {
          "$ref": "#/definitions/ortooOperationID"
        },
        "typeOf": {
          "$ref": "#/definitions/ortooTypeOfDatatype"
        },
        "state": {
          "$ref": "#/definitions/ortooStateOfDatatype"
        }
      }
    },
    "ortooHeader": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "agent": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/ortooRequestType"
        }
      }
    },
    "ortooOperation": {
      "type": "object",
      "properties": {
        "ID": {
          "$ref": "#/definitions/ortooOperationID"
        },
        "opType": {
          "$ref": "#/definitions/ortooTypeOfOperation"
        },
        "body": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "ortooOperationID": {
      "type": "object",
      "properties": {
        "era": {
          "type": "integer",
          "format": "int64",
          "title": "@inject_tag: json:\"e,omitempty\""
        },
        "lamport": {
          "type": "string",
          "format": "uint64",
          "title": "@inject_tag: json:\"l,omitempty\""
        },
        "CUID": {
          "type": "string",
          "title": "@inject_tag: json:\"c,omitempty\""
        },
        "seq": {
          "type": "string",
          "format": "uint64",
          "title": "@inject_tag: json:\"s,omitempty\""
        }
      }
    },
    "ortooPushPullMessage": {
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/definitions/ortooHeader"
        },
        "collection": {
          "type": "string"
        },
        "cuid": {
          "type": "string"
        },
        "PushPullPacks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ortooPushPullPack"
          }
        }
      }
    },
    "ortooPushPullPack": {
      "type": "object",
      "properties": {
        "DUID": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "option": {
          "type": "integer",
          "format": "int64"
        },
        "checkPoint": {
          "$ref": "#/definitions/ortooCheckPoint"
        },
        "era": {
          "type": "integer",
          "format": "int64"
        },
        "type": {
          "$ref": "#/definitions/ortooTypeOfDatatype"
        },
        "operations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ortooOperation"
          }
        }
      }
    },
    "ortooRequestType": {
      "type": "string",
      "enum": [
        "CLIENTS",
        "PUSHPULLS"
      ],
      "default": "CLIENTS"
    },
    "ortooSnapshotResponse": {
      "type": "object",
      "properties": {
        "meta": {
          "$ref": "#/definitions/ortooDatatypeMeta"
        },
        "json": {
          "type": "string"
        }
      }
    },
    "ortooStateOfDatatype": {
      "type": "string",
      "enum": [
        "DUE_TO_CREATE",
        "DUE_TO_SUBSCRIBE",
        "DUE_TO_SUBSCRIBE_CREATE",
        "SUBSCRIBED",
        "DUE_TO_UNSUBSCRIBE",
        "CLOSED",
        "DELETED"
      ],
      "default": "DUE_TO_CREATE"
    },
    "ortooSyncType": {
      "type": "string",
      "enum": [
        "LOCAL_ONLY",
        "MANUALLY",
        "REALTIME"
      ],
      "default": "LOCAL_ONLY"
    },
    "ortooTypeOfDatatype": {
      "type": "string",
      "enum": [
        "COUNTER",
        "MAP",
        "LIST",
        "DOCUMENT"
      ],
      "default": "COUNTER"
    },
    "ortooTypeOfOperation": {
      "type": "string",
      "enum": [
        "NO_OP",
        "SNAPSHOT",
        "ERROR",
        "TRANSACTION",
        "COUNTER_INCREASE",
        "MAP_PUT",
        "MAP_REMOVE",
        "LIST_INSERT",
        "LIST_DELETE",
        "LIST_UPDATE",
        "DOC_PUT_OBJ",
        "DOC_DEL_OBJ",
        "DOC_INS_ARR",
        "DOC_DEL_ARR",
        "DOC_UPD_ARR"
      ],
      "default": "NO_OP"
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "typeUrl": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
